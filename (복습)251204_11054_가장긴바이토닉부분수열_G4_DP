//복습
#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);

	int N;
	cin >> N;
	vector<vector<int>> dp(2,vector<int>(N, 1));
	vector<int> arr(N);

	for (int i = 0; i < N; i++) {
		cin >> arr[i];
	}

	for (int i = 1; i < N; i++) {
		for (int j = 0; j < i; j++) {
			if (arr[i] > arr[j]) {
				dp[0][i] = max(dp[0][i], dp[0][j] + 1);
			}
		}
	}

	for (int i = N - 2; i > -1; i--) {
		for (int j = N - 1; j > i; j--) {
			if (arr[i] > arr[j])
				dp[1][i] = max(dp[1][i], dp[1][j] + 1);
		}
	}

	int result = 1;
	for (int i = 0; i < N; i++) {
		result = max(result, dp[0][i] + dp[1][i]);
	}
	cout << result - 1;
}	
