//O(L^3)
//펠린드롬구하는 함수 만들고 dp로 합치기(dp함수는 dp라기보다는 페린드롬인지 확인하여 맞으면 1 아니면 n인 벡터임)
//resultdp는 0~지금까지를 dp로 두고 , 0~n까지 나누면서 앞에는 resultdp 뒤는 dp로 더해서  작은값을 resultdp에 넣음으로 해결
//설명이 어렵네... 한칸씩 늘려가며 해당범위에서 최소 값을 구하는 방식
#include <iostream>
#include <vector>

using namespace std;

bool pendrom(int st,int ed,string s) {
    while (st <= ed) {
        if (s[st] != s[ed])
            return false;
        st++;
        ed--;
    }
    return true;
}


int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);

    string s;
    cin >> s;

    int L = s.size();
    vector<vector<int>> dp(L, vector<int>(L,1e9));
    for (int i = 0; i < L; i++) {
        for (int j = i; j < L; j++) {
            if (pendrom(i, j, s)) dp[i][j] = 1;
            else dp[i][j] = j - i + 1;
        }
    }

    vector<int> resultdp(L, 1e9);
    resultdp[0] = 1;

    for (int i = 1; i < L; i++) {
        int tmp = dp[0][i];
        for (int j = 0; j < i; j++) {
            tmp = min(tmp, resultdp[j] + dp[j + 1][i]);
        }
        resultdp[i] = tmp;
    }
    cout << resultdp[L - 1];
}
