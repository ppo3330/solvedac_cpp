//O(N)
//풀이 보고 풀었음
//별찍기 같은 문제는 패턴을 찾아야함, 재귀문제 -> N/2등으로 생각해보면됨.
#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

char star[3072][6144];

void printstar(int x,int y,int n) {
	if (n == 3) {
		star[x][y] = '*';
		star[x + 1][y - 1] = '*';
		star[x + 1][y + 1] = '*';
		star[x + 2][y - 2] = '*';
		star[x + 2][y - 1] = '*';
		star[x + 2][y] = '*';
		star[x + 2][y + 1] = '*';
		star[x + 2][y + 2] = '*';
	}
	else {
		printstar(x, y, n / 2);
		printstar(x + n/2, y - n/2, n / 2);
		printstar(x + n/2, y + n/2, n / 2);
	}
}

int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	
	int N;
	cin >> N;
	for (int i = 0; i < 3072; i++) {
		for (int j = 0; j < 6144; j++) {
			star[i][j] = ' ';
		}
	}

	printstar(0, N-1,N);
	
	for (int i = 0; i < N; i++) {
		for (int j = 0; j < 2*N-1; j++) {
			cout << star[i][j];
		}
		cout << "\n";
	}
}
