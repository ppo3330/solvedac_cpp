//O(1)
//외적 하는 방법 기억하기
//선분 1과 선분2의 점들을 외적하여 곱했을때 -1이면 양쪽 이를 반대로도 행해서 겹치는지 판명
//이때 예외로 둘다 0이 나온경우 포개지는지 확인하기.
#include <iostream>
#include <vector>
#include <algorithm>

#define pii pair<int,int>

using namespace std;


int ccw(pii p1, pii p2, pii p3) {
	long long int s = 1LL * p1.first * p2.second + 1LL * p2.first * p3.second + 1LL * p3.first * p1.second;
	s -= (1LL * p1.second * p2.first + 1LL * p2.second * p3.first + 1LL * p3.second * p1.first);

	if (s > 0) return 1;
	else if (s == 0) return 0;
	else return -1;
}

int main()
{
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	cout.tie(NULL);

	pii p1, p2, p3, p4;

	int x, y;
	cin >> x >> y;
	p1 = { x,y };
	cin >> x >> y;
	p2 = { x,y };
	cin >> x >> y;
	p3 = { x,y };
	cin >> x >> y;
	p4 = { x,y };


	int p1p2 = ccw(p1, p2, p3) * ccw(p1, p2, p4);
	int p3p4 = ccw(p3, p4, p1) * ccw(p3, p4, p2);

	if (p1p2 == 0 and p3p4 == 0) {
		if (p1 > p2) swap(p1, p2);
		if (p3 > p4) swap(p3, p4);

		if (p3 <= p2 && p1 <= p4)
			cout << 1;
		else
			cout << 0;
		return 0;
	}
	if (p1p2 <= 0 and p3p4<=0) {
		cout << 1;
	}
	else
		cout << 0;
}
