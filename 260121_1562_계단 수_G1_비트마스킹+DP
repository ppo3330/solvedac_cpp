//O(N*10*1023) -> O(N)
//비트마스킹 어렵네... 
//dp가 생각보다 어려운 형태는 아니었음.
//길이, 마지막값, 비트마스킹(0~9)
//초기값에서 마지막값을 1~9로 해놓고, 이후 bottom-up은 현재 값에서 마지막값이 위 아래로 움직임.

#include <iostream>
#include <vector>

using namespace std;

int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	cout.tie(NULL);

	int N;
	cin >> N;

	static long long dp[101][10][1 << 10];

	for (int d = 1; d < 10; d++) {
		dp[1][d][1 << d] = 1;
	}

	for (int len = 1; len < N; len++) {
		for (int last = 0; last <= 9; last++) {
			for (int mask = 0; mask < (1 << 10); mask++) {
				long long cur = dp[len][last][mask];
				if (cur == 0) continue;

				if (last > 0) {
					int next = last - 1;
					int nmask = mask | (1 << next);
					dp[len + 1][next][nmask] = (dp[len + 1][next][nmask] + cur) % 1000000000;
				}
				if (last < 9) {
					int next = last + 1;
					int nmask = mask | (1 << next);
					dp[len + 1][next][nmask] =
						(dp[len + 1][next][nmask] + cur) % 1000000000;
				}
			}
		}
	}

	int FULL = (1 << 10) - 1;
	long long result = 0;
	for (int i = 0; i <= 9; i++) {
		result = (result + dp[N][i][FULL]) % 1000000000;
	}
	cout << result;
}
