//O(N)
#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);

	int N;
	cin >> N;

	vector<vector<int>> cost(N, vector<int>(3));
	vector<vector<vector<int>>> dp(3,vector<vector<int>>(N, vector<int>(3)));


	for (int i = 0; i < N; i++) {
		cin >> cost[i][0] >> cost[i][1] >> cost[i][2];
	}

	for (int c = 0; c < 3; c++) {
		for (int i = 0; i < 3; i++) {
			dp[c][0][i] = 1e9;
		}
	}
	dp[0][0][0] = cost[0][0];
	dp[1][0][1] = cost[0][1];
	dp[2][0][2] = cost[0][2];
	
	for (int i = 1; i < N; i++) {
		for (int c = 0; c < 3; c++) {
			dp[c][i][0] = cost[i][0] + min(dp[c][i - 1][1], dp[c][i - 1][2]);
			dp[c][i][1] = cost[i][1] + min(dp[c][i - 1][0], dp[c][i - 1][2]);
			dp[c][i][2] = cost[i][2] + min(dp[c][i - 1][1], dp[c][i - 1][0]);

			if (i == N - 1) {
				dp[c][i][c] = 1e9;
			}
		}
	}
	int result = 1e9;
	for (int i = 0; i < 3; i++) {
		for (int c = 0; c < 3; c++) {
			result = min(dp[c][N - 1][i], result);
		}

	}
	cout << result;
}
